---
import { basics } from "../../cv.json";

const { name, label, image, location, profiles, phone, email } = basics;
const { city, region } = location;
---

<section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <h2>{label}</h2>
      <span>
        <!-- Robar icono -->
        {city}, {region}
      </span>
      <footer>
        {email && <a href={`mailto:${email}`} />}
      </footer>
    </div>
    <figure>
      <img src={image} alt={name} />
    </figure>
  </div>
</section>

